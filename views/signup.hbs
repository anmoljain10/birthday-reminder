<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="card p-5 m-auto">
        <h3>Register</h3>
        <form action="/register" method="POST">
          <h6><label>Name</label></h6>
          <input
            type="text"
            placeholder="Enter name"
            class="form-control mt-2"
            required="true"
            name="name"
          />
          <h6 class="mt-3"><label>Email</label></h6>
          <input
            type="email"
            placeholder="Enter email"
            class="form-control mt-2"
            required="true"
            name="email"
          />
          <h6 class="mt-3"> <label>Password</label></h6>
          <input
            type="password"
            placeholder="Enter password"
            class="form-control mt-2"
            required="true"
            name="password"
          />
          <button class="btn btn-primary mt-4" type="submit">Register</button>
        </form>
      </div>
    </div>
  </div>
</div>