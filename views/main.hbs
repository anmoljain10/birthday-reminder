<div class="container py-5">

  <div class="row">
    <div class="col-6">
      <h1>Add Reminder ðŸ””</h1>
      <form action="/save-reminder" method="POST">
        <h4 class="pt-4"><label>Reminder Message</label>
        </h4>
        <input
          name="reminder"
          required="true"
          class="form-control"
          placeholder="Enter reminder message"
        />
        <h4 class="pt-4"><label>Description</label>
        </h4>
        <textarea
          name="description"
          required="true"
          class="form-control"
          placeholder="Enter description"
        ></textarea>
        <h4 class="pt-4"><label>Date</label>
        </h4>
        <input
          name="date"
          type="date"
          required="true"
          min="{{minDate}}"
          class="form-control w-25"
        />
        <br />
        <button class="btn btn-primary" type="submit">Set Reminder</button>
      </form>

    </div>
    <div class="col-6">
      <h1>All Reminders</h1>
      <ul class="mt-5">

        {{#each reminders}}
          <div class="bd-highlight">
            <div class="d-flex justify-content-between">
              <div>
                <h3 class="text-capitalize">{{reminder}}</h3>
                <div class="fs-6">{{description}}</div>
              </div>
              <form method="POST" action="/delete-reminder">
                <input type="hidden" name="id" value="{{id}}" />
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
            <div
              class="d-flex justify-content-end"
              style="font-size:13px"
            >{{displayDate}}</div>
          </div>
          <hr />
        {{/each}}
      </ul>
    </div>
  </div>
</div>